<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_information"
    tools:context="com.example.sdk.beyondthenetwork10.Information">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/searchnews"
                />

            <Button
                android:layout_width="70dp"
                android:layout_height="35dp"

                android:background="@drawable/search"

                android:onClick="view_info"/>

        </LinearLayout>



        <TextView
            android:id="@+id/emergency"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Local News:"
            android:textColor="#000000"
            android:textSize="25dp"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:textAllCaps="false"
            android:text="Second earthquake will strike ..."
            android:onClick="view_news"
            android:background="@drawable/news1"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:background="@drawable/news2"

            android:onClick="view_news"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:background="@drawable/news3"
            android:onClick="view_news"/>




        <TextView
            android:id="@+id/message"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Weather:"
            android:textColor="#000000"
            android:textSize="25dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:textAllCaps="false"
            android:background="@drawable/weather1"

            android:onClick="view_news"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:background="@drawable/weather2"
            android:onClick="view_news"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:background="@drawable/weather3"
            android:onClick="view_news"/>



    </LinearLayout>
</RelativeLayout>
